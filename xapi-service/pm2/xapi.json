{
  "apps": [
    {
      "name": "xAPI",
      "script": "./dist/server.js",
      "cwd": ".",
      "output": "logs/xapi_stdout.log",
      "error": "logs/xapi_stderr.log",
      "pid": "pids/xapi.pid",
      "instances": 2,
      "exec_mode": "cluster",
      "wait_ready": true,
      "listen_timeout": 30000,
      "watch": [
        ".env"
      ],
      "max_memory_restart": "500M"
    }
  ]
}